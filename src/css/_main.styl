/*
* App Styles
*/
$color__brand-1 = #3AAFA9
$color__brand-2 = #2B7A78
$color__brand-3 = #17252A
$color__brand-4 = #DEF2F1
$color__brand-5 = #FEFFFF
$color__background =  #3AAFA9
$color__text =  $color__brand-5
$color__text-alt =  $color__brand-3

html {
  height: 100%;
}

body {
  background-color: $color__brand-1
  color: $color__text
  letter-spacing: 1px
  min-height: 100%;
  font-size: 16px
}

.weather-app {
  display: relative
  text-align: center;
  font-family: 'Montserrat', sans-serif;
}

.app-logo {
  animation: app-logo-spin infinite 20s linear;
  height: 80px;
}

.app-header {
  background-color: $color__brand-3;
  padding: 20px;
}

.app-title {
  font-size: 2.5em;
}

@keyframes app-logo-spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}



h1 {

}

.loading-spinner
  margin-top: 20vh

.header-address
  padding-bottom: 1em

.container
  max-width: 900px
  margin: 0 auto

.weather-icon
  img
    width: 300px;
    filter: invert(.75) sepia(1) saturate(5) hue-rotate(10deg)

.conditions
  margin-top: -4em

  button
    margin: 0 1em
    cursor: pointer
    background-color: $color__brand-3
    color: #fff
    padding: .25em 1em
    border: 1px solid $color__brand-3
    font-size: 1.5em

    &:hover
      background-color $color__brand-4
      color: $color__brand-3!important

.degrees p
  font-size: 5em
  margin: 0 0 1rem 0
  color: $color__text-alt;

.weather-description
  margin-bottom: 2em
  font-size: 1.4em

  .desc, .humidity
    margin: 1em


.sunrise-sunset
  margin-top: 2em
  font-size: 1.2em;

  span
    margin 0 1em

.location
  margin-top: 2em

  p
    padding: 0
    margin: 0

  .disclaimer
    font-size: .8em
    margin-top: 7px

  .coordinates
    margin-top: 1em

    span
      margin: 0 1em

.made-with
  margin-top: 2em

footer
  position: fixed
  width: 100%
  right: 0
  bottom: 0
  left: 0
  padding: 1rem
  background-color: $color__brand-4
  text-align: center;
  color $color__brand-3
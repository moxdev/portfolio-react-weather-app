/*
* App Styles
*/
$color__brand-1 = #3AAFA9
$color__brand-2 = #2B7A78
$color__brand-3 = #17252A
$color__brand-4 = #DEF2F1
$color__brand-5 = #FEFFFF
$color__background =  #3AAFA9
$color__text =  $color__brand-3

html {
  height: 100%;
}

body {
  background-color: $color__brand-1
  color: $color__text
  min-height: 100%;
  display: grid;
  grid-template-rows: 1fr auto;
}

.App {
  display: relative
  text-align: center;
  font-family: 'Montserrat', sans-serif;
  // background-color: $color__background
}

.App-logo {
  animation: App-logo-spin infinite 20s linear;
  height: 80px;
}

.App-header {
  background-color: $color__brand-3;
  padding: 20px;
  color: white;
}

.App-title {
  font-size: 2.5em;
}

.App-intro {
  font-size: large;
}

@keyframes App-logo-spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}



h1 {

}

.loading-spinner
  margin-top: 20vh

.header-address
  span
    display: block
  .of
    margin-bottom: 10px


.weather-icon
  img
    width: 300px;
    filter: invert(.75) sepia(1) saturate(5) hue-rotate(10deg)

.conditions
  margin-top: -4em

  button
    margin: 0 1em

.degrees p
  font-size: 5em
  margin: 0 0 1rem 0

.weather-description
  margin-bottom: 2em
  font-size: 1.4em

  .desc, .humidity
    margin: 1em
    color: $color__brand-4

  .highlight
    // color: yellow

.location, .sunrise-sunset
  margin-top: 2em


footer
  position: fixed
  width: 100%
  right: 0
  bottom: 0
  left: 0
  padding: 1rem
  background-color: $color__brand-4
  text-align: center;
/*
* Loader Styles
*/

.loading-spinner
  margin-top: 20vh
  margin-bottom: 20vh

  img
    margin-bottom: 2rem

  p
    font-size: 1.2em

.loading-error
  margin-top: 20vh
  margin-bottom: 20vh
  max-width: 760px
  margin: 20vh auto

  h2
    text-transform: uppercase
    font-weight: 800
    font-size: 2.5em

  .error-image-container
    display: flex
    justify-content: space-around
    align-items: center
    max-width: 300px
    margin: 0 auto;

    .warning
      width: 100px

    .sad-face
      width: 59px

    span
      font-size: 3em

    @media only screen and (min-width:750px)
      max-width: 500px

      .warning
        width: 150px

      .sad-face
        width: 89px

      span
        font-size: 5em

  .error-message
    padding-top: 1em
    padding-bottom: 1em

    p
      font-size: 1.2em









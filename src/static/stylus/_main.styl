/*
* Main Styles
*/

html
  height: 100%

body
  display: flex
  min-height: 100vh
  flex-direction: column
  background-color: $color__background
  color: $color__text
  letter-spacing: .8px
  line-height: 1.5
  font-size: 16px
  font-family: 'Open Sans', sans-serif

h1, h2, h3
  font-weight: normal

h1
  line-height: 1.25

.weather-app
  flex: 1
  text-align: center
  background-color: $color__background-content

.loading-spinner
  margin-top: 20vh
  margin-bottom: 20vh

.container
  padding: 0.625rem
  max-width: 960px
  margin: 0 auto

  @media only screen and (min-width: 600px)
    padding: 1.25rem








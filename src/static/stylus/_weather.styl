/*
* Weather Styles
*/

.weather-icon
  img
    width: 300px;

.conditions
  margin-top: -4em

  button
    margin: 0 1em
    cursor: pointer
    background-color: $color__brand-3
    border: none
    color: #fff
    padding: .25em 1em
    font-size: 1.5em

    &:hover
      background-color $color__brand-4
      color: $color__text-hover!important

.degrees
  margin: 0 0 1rem 0

  span
    font-size: 5em

  img
    width: 25px
    margin-left: 20px


.weather-description
  margin-bottom: 2em
  font-size: 1.4em

  .desc, .humidity
    margin: 1em
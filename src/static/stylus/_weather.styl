/*
* Weather Styles
*/

.weather-icon
  margin-top: -3em

  img
    width: 300px;

.conditions
  margin-top: -5em

  button
    background-color: $color__brand-3
    color: #fff
    width: 100%
    padding: .5em
    font-size: 1.2em
    margin-bottom: 1em
    cursor: pointer
    border: none

    &:hover
      background-color $color__brand-4
      color: $color__text-hover!important

.degrees
  margin-bottom: 1rem

  span
    font-size: 5em

  img
    width: 25px
    padding-left: 30px

.weather-description
  margin-bottom: 1.5rem
  font-size: 1.4em

  .desc, .humidity
    margin: 0 1em

@media only screen and (min-width: 760px)
  .button-wrapper
    display: flex

  button
    margin: 1rem
    width: 175px